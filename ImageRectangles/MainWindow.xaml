<Window x:Class="ImageRectangles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageRectangles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <DockPanel x:Name="NavBar" Background="LightBlue" Height="40" VerticalAlignment="Bottom" >

            <Label Margin="10,0,0,0" Height="23" Name="Label1">

                Current File:

            </Label>

            <Label Margin="5,0,0,0" Height="25" Name="FileNameLabel" Width="300" />
            <Button Height="24" x:Name="BrowseButton" Width="75" Click="BrowseButton_Click" RenderTransformOrigin="0.5,0.5" Content="Browse" HorizontalAlignment="Right"/>

        </DockPanel>

        <DockPanel Margin="0,0,0,40" >
            <Image Name="ImageViewer1" VerticalAlignment="Top" Stretch="Uniform" StretchDirection="DownOnly" />

        </DockPanel>
    </Grid>
</Window>
